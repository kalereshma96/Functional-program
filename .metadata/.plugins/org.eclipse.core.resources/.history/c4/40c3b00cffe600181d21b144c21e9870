package com.bridgelabz.functionalprograms;

import com.bridgelabz.utility.Utility;

public class StopWatch {
	
	
	 long startTime=0;
	 long stopTime=0;
	 long elapsedTime;
	 
	 public void start()
	 {
		startTime=System.currentTimeMillis();
		System.out.println("the current start time is:"+startTime); 
	 }
	 
	 public void stop()
	 {
		 stopTime=System.currentTimeMillis();
		 System.out.println();
		 
	 }
	 
	 public long elapse()
	 {
		elapsedTime=stopTime-startTime;
		//System.out.println("Elapsed time is:"+elapsedTime);
		return elapsedTime;
	 }

	public static void main(String[] args) {
     Utility utility=new Utility();
     StopWatch sw=new StopWatch();
     System.out.println("press 0 to start timer");
      utility.inputInteger();
     sw.start();
     
     System.out.println("press 1 to stop timer");
     utility.inputInteger();
     sw.stop();
     
     
     long e =sw.elapse();
     System.out.println("total time elapsed in miliseconds is :"+e);
     System.out.println();
     System.out.println("Time in minutes:"+((e/1000)/60)+ "minutes");

     System.out.println("Time in seconds:"+((e/1000)%60)+ "seconds");
     
	}

}
